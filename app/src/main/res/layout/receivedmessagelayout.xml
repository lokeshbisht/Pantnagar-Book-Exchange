<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/receivedMessageLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/receivedMessageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/receivedmessage"
        android:maxWidth="180dp"
        android:padding="10dp"
        android:text="message"
        android:textAlignment="viewStart"
        android:textColor="@color/colorHeading"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/receivedMessageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/receivedMessageText"
        app:layout_constraintLeft_toRightOf="@+id/receivedMessageText" />

</android.support.constraint.ConstraintLayout>