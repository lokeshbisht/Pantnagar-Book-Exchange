<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:elevation="20dp"
        card_view:cardBackgroundColor="@color/colorPrimaryLight"
        card_view:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/myBookBookName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="false"
                android:layout_marginEnd="70dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:singleLine="true"
                android:text="Book name "
                android:textColor="@color/colorHeading"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/myBookAuthorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/myBookBookName"
                android:layout_below="@+id/myBookBookName"
                android:singleLine="true"
                android:text="Author name"
                android:textColor="@color/colorHeading"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/myBookGenreAndLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/myBookAuthorName"
                android:layout_below="@+id/myBookAuthorName"
                android:layout_marginBottom="15dp"
                android:singleLine="true"
                android:text="Genre | Language"
                android:textColor="@color/colorHeading"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/myBookAvailability"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/bookunavailable" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>